[Unit]
Description=WordPress Analytics Monitoring Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/wordpress
ExecStart=/usr/bin/python3 /var/www/wordpress/enhanced_analytics_setup.py
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=wordpress-analytics

[Install]
WantedBy=multi-user.target
